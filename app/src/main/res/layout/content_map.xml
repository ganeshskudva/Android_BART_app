<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gkudva.bart.Activities.MapActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/station"
        android:id="@+id/tvStation"
        android:layout_alignParentLeft="true"
        android:paddingLeft="10dp"

        android:textSize="20dp"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/spStation"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/tvStation"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:entries="@array/station"/>

    <com.gkudva.bart.Util.TouchImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ivMap"
        android:src="@mipmap/bart"
        android:layout_below="@+id/spStation"
        android:layout_marginTop="20dp"/>


</RelativeLayout>