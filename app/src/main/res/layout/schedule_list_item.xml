<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="New Text"
        android:id="@+id/tvFare"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorGreen"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="New Text"
        android:id="@+id/tvTravelDuration"
        android:layout_below="@+id/tvFare"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvSrc"
        android:layout_below="@+id/tvTravelDuration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="start"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/tvSrcTime"
        android:layout_alignRight="@+id/tvSrc"
        android:layout_below="@+id/tvTravelDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvDest"
        android:layout_below="@+id/tvSrc"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="New Text"
        android:id="@+id/tvDestTime"
        android:layout_below="@+id/tvSrcTime"
        android:layout_alignLeft="@+id/tvSrcTime"
        android:layout_alignStart="@+id/tvSrcTime" />
</RelativeLayout>